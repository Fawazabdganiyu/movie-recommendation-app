# Environment variables for the entire project

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/movie-recommendation-dev
MONGODB_TEST_URI=mongodb://localhost:27017/movie-recommendation-test

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=super-secret-jwt-key-to-be-changed-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=super-secret-refresh-key-to-be-changed-in-production
JWT_REFRESH_EXPIRES_IN=7d

# TMDB API Configuration
TMDB_API_KEY=your-tmdb-api-key-here
TMDB_BASE_URL=https://api.themoviedb.org/3
TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p

# Email Configuration (Optional - for email verification)
EMAIL_FROM=noreply@movierecommendation.app
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security Configuration
